<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ai.codia.x.kotlin.demo">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodiaDemo">

        <activity
            android:name="com.example.myapp.LoginActivity"
            android:exported="true"> <!-- exported=true es necesario si tiene MAIN -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.example.myapp.MainActivity" />
        <activity android:name="com.example.myapp.RegisterActivity" />

    </application>
</manifest>
